<%- include("layout/header") %>
<div class="container">
	<div class="row my-5">
		<div class="col-lg-6 mx-auto mt-4">
			<div class="card-shadow">
				<% if(message){ %>
				<div class="my-4" style="display: flex; justify-content: center">
					<h2 class="text-success text-center"><%= message %></h2>
					<button class="btn btn-success mx-2">
						<a class="text-decoration-none text-light" href="/">Go Back</a>
					</button>
				</div>
				<% } %>
				<div
					class="rounded py-2"
					style="background-color: rgb(216, 137, 67); text-align: center">
					<h1 class="text-light">Edit User: <%= user.name %></h1>
				</div>
				<div
					class="card-body py-4 px-5 border"
					style="border-color: bisque !important">
					<form
						action="/update/<%= user._id %>"
						method="post"
						id="add-form"
						enctype="multipart/form-data">
						<div class="mb-3 text-light">
							<label for="name">Name</label>
							<input
								type="text"
								name="name"
								class="form-control form-control-lg mt-3"
								placeholder="Enter Name"
								value="<%= user.name %>"
								required />
						</div>
						<div class="mb-3 text-light">
							<label for="email">Email</label>
							<input
								type="email"
								name="email"
								class="form-control form-control-lg mt-3"
								placeholder="Enter Email"
								value="<%= user.email %>"
								required />
						</div>
						<div class="mb-3 text-light">
							<label for="phone">Phone no.</label>
							<input
								type="tel"
								name="phone"
								class="form-control form-control-lg mt-3"
								placeholder="Enter Phone"
								value="<%= user.phone %>"
								required />
						</div>
						<div class="mb-5 text-light">
							<label for="image">Image</label>
							<input
								type="file"
								name="image"
								class="form-control form-control-lg mt-3"
								required />
							<img
								src="/<%= user.image  %>"
								width="100"
								class="img-thumbnail mt-1" />
						</div>
						<input type="hidden" name="old_image" value="<%= user.image %>" />
						<div class="mb-3 d-grid">
							<input
								type="submit"
								name="submit"
								value="Update User"
								class="btn btn-lg"
								style="background-color: rgb(216, 137, 67); color: white"
								required />
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<%- include("layout/footer") %>
